{
  "rulesDirectory": ["tslint-consistent-codestyle"],
  "rules": {
    // core rules
    "no-any": true,
    "no-internal-module": true,
    "no-namespace": true,
    "no-reference": true,
    "no-var-requires": true,
    "typedef": [true, "call-signature", "parameter", "property-declaration"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "curly": [true],
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    // "no-console": [
    //   true,
    //   "log"
    // ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-invalid-this": true,
    "no-null-keyword": true,
    "no-shadowed-variable": true,
    // "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": true,
    "use-isnan": true,
    "ban-comma-operator": true,
    "no-import-side-effect": true,
    "no-non-null-assertion": true,
    "eofline": true,
    "indent": [true, "spaces"],
    "max-file-line-count": [true, 500],
    "max-line-length": [true, 120],
    "no-default-export": true,
    "no-mergeable-namespace": true,
    "no-require-imports": true,
    "align": [true, "statements"],
    "arrow-parens": true,
    "arrow-return-shorthand": true,
    "no-unnecessary-callback-wrapper": true,
    "only-arrow-functions": true,
    "class-name": true,
    "jsdoc-format": true,
    "new-parens": true,
    "no-angle-bracket-type-assertion": false,
    "no-consecutive-blank-lines": [true, 3],
    "no-parameter-properties": true,
    "number-literal-format": true,
    // "object-literal-key-quotes": [
    //   true,
    //   "as-needed"
    // ],
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [true],
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": [true, "always", "ignore-interfaces"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast"
    ],

    // consistent codestyle rules
    "const-parameters": true,
    "early-exit": true,
    "naming-convention": "else",
    "no-as-type-assertion": true,
    "no-collapsible-if": true,
    "no-else-after-return": true,
    // "no-return-undefined": true,
    "return-undefined": true,
    "no-static-this": true,
    "no-unnecessary-else": true,
    "no-unused": true,
    "no-var-before-return": false,
    "object-shorthand-properties-first": true,
    "parameter-properties": [
      true,
      "readonly",
      "member-access",
      "leading"
    ],
    "prefer-const-enum": true,
    "prefer-while": true
  }
}
